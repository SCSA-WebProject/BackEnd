<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.mvc.model.dao.DiaryDao">

    <!-- 전체 일기 목록 -->
    <select id="selectAll" resultType="Diary">
        SELECT * FROM diary ORDER BY date DESC
    </select>

    <!-- 단일 일기 조회 -->
    <select id="selectOne" parameterType="int" resultType="Diary">
        SELECT * FROM diary WHERE id = #{id}
    </select>

    <!-- 일기 등록 -->
    <insert id="insertDiary" parameterType="Diary" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO diary (title, date, context)
        VALUES (#{title}, #{date}, #{context})
    </insert>

    <!-- 일기 수정 -->
    <update id="updateDiary" parameterType="Diary">
        UPDATE diary
        SET title = #{title}, date = #{date}, context = #{context}
        WHERE id = #{id}
    </update>

    <!-- 일기 삭제 -->
    <delete id="deleteDiary" parameterType="int">
        DELETE FROM diary WHERE id = #{id}
    </delete>

</mapper>
